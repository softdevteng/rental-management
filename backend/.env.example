# Backend environment variables
# Copy this file to .env and fill the values

# Server
PORT=5000

# MySQL configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=rental_manager
MYSQL_USER=root
MYSQL_PASSWORD=Mw@ng!001.

# JWT secret
JWT_SECRET=replace-with-a-strong-secret

# Frontend URL used for password reset links
FRONTEND_URL=http://localhost:3000

# Dev seeding routes (optional)
# Set to true only in development
ENABLE_DEV_ROUTES=false

# Allow purge script to run (guard)
# Set to true only when you want to delete dev sample data
ALLOW_PURGE=false

# SMTP (optional - if not provided, emails log to console)
SMTP_HOST=
SMTP_PORT=
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
MAIL_FROM=
